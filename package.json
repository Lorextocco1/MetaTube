{
  "name": "metatube",
  "private": true,
  "version": "1.0.0",
  "description": "MetaTube - The Ultimate Glassmorphism Music Experience",
  "author": "Nebula User",
  "main": "main.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "dist": "vite build && electron-builder --linux AppImage"
  },
  "dependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "@google/genai": "^1.3.0",
    "lucide-react": "^0.344.0",
    "music-metadata-browser": "^2.5.10",
    "buffer": "^6.0.3"
  },
  "devDependencies": {
    "vite": "^6.0.0",
    "electron": "31.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "org.metatube.player",
    "productName": "MetaTube",
    "electronVersion": "31.0.0",
    "linux": {
      "target": ["AppImage"],
      "category": "Audio",
      "executableName": "metatube"
    },
    "directories": {
      "output": "dist_electron"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "package.json"
    ]
  }
}